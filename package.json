{
	"name": "nightpdf",
	"version": "1.2.6",
	"description": "Dark Mode for PDFs",
	"main": "out/main/app.js",
	"packageManager": "yarn@3.5.1",
	"repository": "https://github.com/Lunarequest/NightPDF",
	"homepage": "https://github.com/Lunarequest/NightPDF#readme",
	"bugs": {
		"url": "https://github.com/Lunarequest/NightPDF/issues",
		"email": "nullrequest@vivaldi.net"
	},
	"scripts": {
		"typecheck": "tsc --noEmit",
		"build": "rimraf out && gulp",
		"dev": "yarn build && DEBUG=1 electron .",
		"dist": "NODE_ENV='production' yarn build && NODE_ENV='production' electron-builder  --config electron-builder-config.js",
		"lint": "rome check .",
		"format": "rome format . --write",
		"prepare": "husky install",
		"pre-commit": "yarn format && yarn lint"
	},
	"author": {
		"name": "Lunarequest",
		"email": "nullrequest@vivaldi.net"
	},
	"license": "GPL-2.0-only",
	"devDependencies": {
		"@types/gulp": "^4.0.10",
		"@types/gulp-concat": "^0.0.33",
		"@types/gulp-postcss": "^8.0.2",
		"@types/node": "^20.0.0",
		"@types/yargs": "^17.0.24",
		"cssnano": "^6.0.1",
		"cssnano-preset-advanced": "^6.0.1",
		"electron": "^24.2.0",
		"electron-builder": "^24.3.0",
		"esbuild": "^0.17.18",
		"eslint": "^8.39.0",
		"gulp": "^4.0.2",
		"gulp-concat": "^2.6.1",
		"gulp-esbuild": "^0.11.1",
		"gulp-postcss": "^9.0.1",
		"husky": "^8.0.3",
		"postcss": "^8.4.23",
		"rimraf": "^5.0.0",
		"rome": "^12.0.0",
		"ts-node": "^10.9.1"
	},
	"dependencies": {
		"electron-updater": "6.1.0",
		"nouislider": "^15.7.0",
		"typescript": "^5.0.4",
		"yargs": "^17.7.2"
	}
}
