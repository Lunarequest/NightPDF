{
	"name": "nightpdf",
	"version": "0.4.0",
	"description": "Dark Mode for PDFs",
	"main": "./dist/app.js",
	"homepage": "https://github.com/advaithm/NightPDF#readme",
	"bugs": {
		"url": "https://github.com/advaithm/NightPDF/issues",
		"email": "nullrequest@vivaldi.net"
	},
	"scripts": {
		"pack": "electron-builder --dir",
		"start": "electron ./dist/app.js",
		"dist": "electron-builder",
		"dist-win": "electron-builder --win",
		"build": "tsc",
		"lint": "eslint . --ext .ts",
		"prettier": "prettier --config .prettierrc '**/*.ts' --write"
	},
	"author": {
		"name": "Nullrequest",
		"email": "nullrequest@vivaldi.net"
	},
	"license": "GPL-2.0-only",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.29.0",
		"@typescript-eslint/parser": "^4.29.0",
		"electron": "^13.1.8",
		"electron-builder": "^22.10.5",
		"electron-notarize": "^1.0.0",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"prettier": "^2.3.2"
	},
	"dependencies": {
		"dotenv": "^8.2.0",
		"nouislider": "^14.7.0",
		"typescript": "^4.3.5"
	},
	"build": {
		"appId": "io.nullrequest.NightPDF",
		"productName": "NightPDF",
		"fileAssociations": [
			{
				"ext": "pdf",
				"icon": "build/icon.icns",
				"role": "viewer",
				"isPackage": false
			}
		],
		"linux": {
			"icon": "build/icon.icoset/icon_256x256.png",
			"desktop": {
				"Name": "NightPdf",
				"Comment": "Dark Mode PDF reader"
			},
			"target": [
				"AppImage",
				"deb",
				"rpm",
				"tar.gz"
			],
			"category": "Utilty"
		},
		"win": {
			"target": [
				"nsis",
				"portable"
			],
			"icon": "build/icon.ico"
		}
	}
}
