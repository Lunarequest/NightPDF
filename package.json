{
    "name": "nightpdf",
    "version": "0.4.2",
    "description": "Dark Mode for PDFs",
    "main": "app.js",
    "homepage": "https://github.com/advaithm/NightPDF#readme",
    "bugs": {
        "url": "https://github.com/advaithm/NightPDF/issues",
        "email": "nullrequest@vivaldi.net"
    },
    "scripts": {
        "pack": "electron-builder --dir",
        "dev": "electron .",
        "dist": "electron-builder",
        "dist-win": "electron-builder --win",
        "lint": "eslint .",
        "prettier": "prettier --config .prettierrc --write ."
    },
    "author": {
        "name": "Nullrequest",
        "email": "nullrequest@vivaldi.net"
    },
    "license": "GPL-2.0-only",
    "devDependencies": {
        "electron": "^21.2.2",
        "electron-builder": "^22.11.7",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "prettier": "^2.3.2"
    },
    "dependencies": {
        "nouislider": "^15.2.0"
    },
    "build": {
        "appId": "io.nullrequest.NightPDF",
        "productName": "NightPDF",
        "fileAssociations": [
            {
                "ext": "pdf",
                "icon": "build/icon.icns",
                "role": "viewer",
                "isPackage": false
            }
        ],
        "linux": {
            "icon": "build/icon.icoset/icon_256x256.png",
            "desktop": {
                "Name": "NightPdf",
                "Comment": "Dark Mode PDF reader"
            },
            "target": [
                "AppImage",
                "deb",
                "rpm",
                "tar.gz"
            ],
            "category": "Utilty"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "build/icon.ico"
        }
    }
}
