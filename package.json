{
	"name": "nightpdf",
	"version": "v3.0.0-beta2",
	"description": "Dark Mode for PDFs",
	"main": "out/main/app.js",
	"packageManager": "yarn@4.0.0-rc.48",
	"repository": "https://github.com/Lunarequest/NightPDF",
	"homepage": "https://github.com/Lunarequest/NightPDF#readme",
	"bugs": {
		"url": "https://github.com/Lunarequest/NightPDF/issues",
		"email": "nullrequest@vivaldi.net"
	},
	"scripts": {
		"typecheck": "tsc --noEmit",
		"build": "rimraf out && yarn node --loader ts-node/esm ./build.mts",
		"dev": "yarn typecheck && yarn build && DEBUG=1 electron .",
		"dist": "NODE_ENV='production' NODE_OPTIONS='--max-old-space-size=4096' yarn build && NODE_ENV='production' NODE_OPTIONS='--max-old-space-size=4096' electron-builder --config electron-builder-config.js",
		"lint": "rome check .",
		"format": "rome format . --write",
		"ci": "rome ci .",
		"pre-commit": "yarn ci",
		"postinstall": "husky install",
		"prepack": "pinst --disable",
		"postpack": "pinst --enable"
	},
	"author": {
		"name": "Lunarequest",
		"email": "nullrequest@vivaldi.net"
	},
	"license": "GPL-2.0-only",
	"devDependencies": {
		"@types/copy": "^0.3.2",
		"@types/figlet": "^1.5.6",
		"@types/node": "^20.4.8",
		"@types/yargs": "^17.0.24",
		"chalk": "^5.3.0",
		"copy": "^0.3.2",
		"cssnano": "^6.0.1",
		"cssnano-preset-advanced": "^6.0.1",
		"electron": "^25.4.0",
		"electron-builder": "^24.6.3",
		"esbuild": "^0.19.0",
		"esbuild-plugin-glob": "^2.2.2",
		"figlet": "^1.6.0",
		"husky": "^8.0.3",
		"pinst": "^3.0.0",
		"postcss": "^8.4.27",
		"rimraf": "^5.0.1",
		"rome": "^12.1.3",
		"sass": "^1.64.2",
		"ts-node": "^10.9.1"
	},
	"dependencies": {
		"electron-log": "^4.4.8",
		"electron-store": "^8.1.0",
		"electron-tabs": "^1.0.1",
		"electron-updater": "6.1.4",
		"json-schema-typed": "8.0.1",
		"nouislider": "^15.7.1",
		"typescript": "^5.1.6",
		"yargs": "^17.7.2"
	}
}
