{
    "name": "nightpdf",
    "version": "0.4.7",
    "description": "Dark Mode for PDFs",
    "main": "out/app.js",
    "packageManager": "yarn@3.4.1",
    "repository": "https://github.com/Lunarequest/NightPDF",
    "homepage": "https://github.com/Lunarequest/NightPDF#readme",
    "bugs": {
        "url": "https://github.com/Lunarequest/NightPDF/issues",
        "email": "nullrequest@vivaldi.net"
    },
    "scripts": {
        "build": "tsc",
        "pack": "electron-builder --dir",
        "dev": "yarn build && electron .",
        "dist": "yarn build && electron-builder",
        "dist-win": "yarn build && electron-builder --win",
        "lint": "eslint .",
        "prettier": "prettier --config .prettierrc --write ."
    },
    "author": {
        "name": "Nullrequest",
        "email": "nullrequest@vivaldi.net"
    },
    "license": "GPL-2.0-only",
    "devDependencies": {
        "electron": "^23.0.0",
        "electron-builder": "^23.6.0",
        "eslint": "^8.34.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.8.4",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "electron-updater": "^5.3.0",
        "nouislider": "^15.7.0"
    },
    "build": {
        "appId": "io.github.lunarequest.NightPDF",
        "productName": "NightPDF",
        "fileAssociations": [
            {
                "ext": "pdf",
                "icon": "build/icon.icns",
                "role": "viewer",
                "isPackage": false
            }
        ],
        "linux": {
            "desktop": {
                "Name": "NightPdf",
                "Comment": "Dark Mode PDF reader"
            },
            "publish": [
                "github"
            ],
            "target": [
                "AppImage",
                "deb",
                "rpm"
            ],
            "category": "Utilty"
        },
        "win": {
            "publish": [
                "github"
            ],
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "build/icon.ico"
        },
        "mac": {
            "publish": [
                "github"
            ],
            "category": "public.app-category.productivity",
            "target": [
                "dmg",
                "zip"
            ],
            "bundleVersion": "1",
            "artifactName": "NightPDF-${version}.${ext}",
            "darkModeSupport": true,
            "hardenedRuntime": true,
            "gatekeeperAssess": false,
            "type": "distribution"
        }
    }
}
