{
	"name": "nightpdf",
	"version": "1.2.0",
	"description": "Dark Mode for PDFs",
	"main": "out/main/app.js",
	"packageManager": "yarn@3.4.1",
	"repository": "https://github.com/Lunarequest/NightPDF",
	"homepage": "https://github.com/Lunarequest/NightPDF#readme",
	"bugs": {
		"url": "https://github.com/Lunarequest/NightPDF/issues",
		"email": "nullrequest@vivaldi.net"
	},
	"scripts": {
		"typecheck": "tsc --noEmit",
		"build": "rimraf out && gulp",
		"dev": "yarn build && electron .",
		"dist": "NODE_ENV='production' electron-builder --config electron-builder.js",
		"lint": "rome check .",
		"format": "rome format . --write",
		"prepare": "husky install",
		"pre-commit": "yarn format && yarn lint"
	},
	"author": {
		"name": "Nullrequest",
		"email": "nullrequest@vivaldi.net"
	},
	"license": "GPL-2.0-only",
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.59.0",
		"@typescript-eslint/parser": "^5.59.0",
		"autoprefixer": "^10.4.14",
		"cssnano": "^6.0.0",
		"electron": "^24.1.2",
		"electron-builder": "^23.6.0",
		"esbuild": "^0.17.18",
		"eslint": "^8.39.0",
		"gulp": "^4.0.2",
		"gulp-concat": "^2.6.1",
		"gulp-esbuild": "^0.11.1",
		"gulp-postcss": "^9.0.1",
		"husky": "^8.0.3",
		"postcss": "^8.4.23",
		"pretty-quick": "^3.1.3",
		"rimraf": "^5.0.0",
		"rome": "^12.0.0"
	},
	"dependencies": {
		"electron-updater": "^5.3.0",
		"nouislider": "^15.7.0",
		"typescript": "^5.0.4"
	}
}
