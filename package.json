		"@web/rollup-plugin-html": "^1.11.1",
		"electron": "^24.1.1",
		"electron-builder": "^23.6.0",
		"eslint": "^8.38.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.3",
		"prettier": "^2.8.7",
		"pretty-quick": "^3.1.3",
		"rimraf": "^5.0.0",
