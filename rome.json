{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"organizeImports": {
		"enabled": false
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentSize": 4,
		"ignore": ["app/libs/**/**"]
	},
	"files": {
		"ignore": ["app/libs/**/**", "out/**/**"]
	}
}
